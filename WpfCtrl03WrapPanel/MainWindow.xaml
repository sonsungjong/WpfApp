            <Setter Property="FontSize" Value="120" />
            <Setter Property="Background" Value="Red" />
            <Setter Property="Margin" Value="3" />
        </Style>
    </Window.Resources>
    <WrapPanel>
            <TextBlock Text="W" />
            <TextBlock Text="r" />
            <TextBlock Text="a" />
            <TextBlock Text="p" />
            <TextBlock Text="P" />
            <TextBlock Text="a" />
            <TextBlock Text="n" />
            <TextBlock Text="e" />
            <TextBlock Text="l" />
        </WrapPanel>
</Window>
