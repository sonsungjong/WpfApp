<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:PageNavigationApp7.ViewModel"
                    xmlns:view="clr-namespace:PageNavigationApp7.View">
    
    <!-- 네비게이션 목록에 올라갈 각 UserControl의 ViewModel을 셋팅 -->
    <DataTemplate DataType="{x:Type vm:HomeViewModel}">
        <view:HomeView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:CustomerViewModel}">
        <view:CustomersView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ProductViewModel}">
        <view:ProductsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:OrderViewModel}">
        <view:OrdersView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:TransactionViewModel}">
        <view:TransactionsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:ShipmentViewModel}">
        <view:ShipmentsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SettingViewModel}">
        <view:SettingsView />
    </DataTemplate>

</ResourceDictionary>